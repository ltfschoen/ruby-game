source "https://rubygems.org"

# https://github.com/gosu/gosu
# Ruby 2D game development
gem "gosu"

# https://github.com/larskanis/opengl
# OpenGL wrapper library for Ruby
gem "opengl"

# https://rubygems.org/gems/glu/versions/8.2.2
# GLU (OpenGL Utility Library) bindings for OpenGL Gem
# https://en.wikipedia.org/wiki/OpenGL_Utility_Library
gem "glu"

gem "rspec"